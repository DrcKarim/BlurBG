<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270" android:endColor="#27cbcbcb" android:startColor="#20000000" />
                    <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="0dp" android:topLeftRadius="15dp" android:topRightRadius="0dp" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="3dp" android:right="0dp" android:top="0dp">
                <shape>
                    <gradient android:angle="0" android:centerColor="#d6c882e4" android:endColor="#c882e4" android:startColor="#eff89bc8" />
                    <corners android:radius="1dp" />
                    <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="0dp" android:topLeftRadius="15dp" android:topRightRadius="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
