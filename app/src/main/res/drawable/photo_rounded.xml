<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270" android:endColor="#27cbcbcb" android:startColor="#20000000" />
                    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="15dp" android:topLeftRadius="0dp" android:topRightRadius="15dp" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="0dp" android:right="3dp" android:top="0dp">
                <shape>
                    <gradient android:angle="0" android:centerColor="#ff7c93" android:endColor="#ff5355" android:startColor="#ff94b4" />
                    <corners android:radius="1dp" />
                    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="15dp" android:topLeftRadius="0dp" android:topRightRadius="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
